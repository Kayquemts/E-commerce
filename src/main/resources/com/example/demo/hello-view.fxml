<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">

    <center>
        <AnchorPane prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER">

            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" layoutY="55.0" prefHeight="47.0" prefWidth="600.0" text="Seja Bem Vindo" textOverrun="CLIP">
               <font>
                  <Font name="System Bold Italic" size="32.0" />
               </font></Label>
                <TextField fx:id="nome" layoutX="180.0" layoutY="133.0" prefHeight="25.0" prefWidth="240.0" promptText="Enter your name" />
                <PasswordField fx:id="senha" layoutX="182.0" layoutY="175.0" prefHeight="25.0" prefWidth="240.0" promptText="Enter your password" />
                <Button layoutX="179.0" layoutY="299.0" mnemonicParsing="false" onAction="#onHelloButtonClick" prefHeight="25.0" prefWidth="240.0" text="Login" />
            <RadioButton fx:id="cliente" layoutX="180.0" layoutY="255.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0" text="Cliente">
               <font>
                  <Font name="System Italic" size="17.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="admin" layoutX="337.0" layoutY="250.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="82.0" text="Admin">
               <font>
                  <Font size="17.0" />
               </font>
            </RadioButton>
            <Label fx:id="errorMessage" layoutX="182.0" layoutY="229.0" prefHeight="17.0" prefWidth="240.0" />
            <Hyperlink layoutX="179.0" layoutY="209.0" onAction="#onCriarCliente" text="Criar conta">
               <font>
                  <Font size="15.0" />
               </font>
            </Hyperlink>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
